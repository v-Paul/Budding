    <Border BorderBrush="#fab915" BorderThickness="1">
        <Grid Background="#f4f3ef" >
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="100"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="spTtile" MouseDown="spTtile_MouseDown"  Background="#fab915">
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                    <Button Width="30" Height="30" Margin="0" Style="{StaticResource BtnInfoStyle}" Background="#fab915" Content="?" />
                    <Button Width="30" Height="30" Margin="2,0,0,0" Style="{StaticResource BtnInfoStyle}" Background="#fab915" Content ="__" />
                    <Button Width="30" Height="30" Margin="2,0,0,0" Style="{StaticResource BtnCloseStyle}" Background="#fab915" Content ="X" Click="Button_Click"/>
                </StackPanel>
            </StackPanel>
            <Border  Grid.Row="1" BorderBrush="LightGray" BorderThickness="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="150"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" MinWidth="60"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Image Source="pack://siteoforigin:,,,/Resources/KeyImg.png"  Margin="5" Height="80" Width="80" HorizontalAlignment="Left"/>
                <Button Grid.Column="1" Style="{StaticResource BtnInfoStyle}" Width="120" Height="40"  Content="CreateKey" FontSize="16" Background="#5EB26C"/>
                <!--<Button Grid.Column="2" Style="{StaticResource BtnInfoStyle}" Height="40" Content="50000" Padding="5"  Background="#fab915" FontSize="16"  Margin="50,0,0,0"/>-->
                    <TextBlock Grid.Column="2" Style="{StaticResource textblockStyle}" Text="50000" FontSize="16" Background="#fab915" Foreground="White" Margin="50,0,0,0" />
                    <Image Grid.Column="3" Source="pack://siteoforigin:,,,/Resources/KeyIcon.png" Height="30" HorizontalAlignment="Left"/>
                </Grid>
            </Border>
            <Border  Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1">
                <Grid Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.RowSpan="2" Source="pack://siteoforigin:,,,/Resources/dig.png" Margin="15" Height="80" Width="80" HorizontalAlignment="Left"/>
                    <Button Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Style="{StaticResource BtnInfoStyle}" Width="120" Height="40"  Content="CreateBlock" FontSize="16" Background="#5EB26C"/>
                    <!--<Button Grid.Column="1" Grid.Row="1" Style="{StaticResource BtnInfoStyle}" Margin="5,0" Height="40" Padding="5" Content="12228" FontSize="16" Background="#fab915"/>-->
                    <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource textblockStyle}" Text="12228" FontSize="16" Background="#fab915" Foreground="White"/>
                    <!--<Button Grid.Column="2" Grid.Row="1" Style="{StaticResource BtnInfoStyle}" Height="40"  Content="128" Padding="5" FontSize="16" Background="#fab915"/>-->
                    <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource textblockStyle}" Text="128" FontSize="16" Background="#fab915" Foreground="White" Margin="5,0,0,0"/>
                    <TextBlock Grid.Column="3" Text="Puzzle:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="10" />
                    <TextBox Grid.Column="4" Grid.Row="0" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0"/>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="Express:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="10" />
                    <TextBox Grid.Column="4" Grid.Row="1" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0"/>
                </Grid>
            </Border>
            <Border  Grid.Row="3" BorderBrush="LightGray" BorderThickness="0">
                <Grid  Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition MinWidth="100"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.RowSpan="2" Source="pack://siteoforigin:,,,/Resources/CoinImg.png" Margin="15" Height="80" Width="80" HorizontalAlignment="Left"/>
                    <ComboBox Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource btCmb}" Width="120" Height="40" FontSize="16" Background="#5EB26C">
                        <ComboBoxItem>keyName1</ComboBoxItem>
                        <ComboBoxItem>keyName2</ComboBoxItem>
                        <ComboBoxItem>keyName3</ComboBoxItem>
                    </ComboBox>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="Nodes:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="5" />
                    <!--<Button Grid.Column="2" Grid.Row="1" Style="{StaticResource BtnInfoStyle}" Height="40"  Content="128" Padding="5" FontSize="16" Background="#66615b"/>-->
                    <TextBlock Grid.Column="2" Grid.Row="1" Style="{StaticResource textblockStyle}" Text="128" FontSize="16" Background="#66615b" Foreground="White"/>
                    <DockPanel  Grid.Row="0"  Grid.Column="3" Grid.ColumnSpan="2" >
                        <TextBlock Text="Blance:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="16" />
                        <TextBox Style="{StaticResource TextBoxStyle}" Height="45" Margin="0" IsEnabled="False" Text="111" FontSize="16"/>
                    </DockPanel>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="Uncommit Blance:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="10" />
                    <TextBox Grid.Column="4" Grid.Row="1" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0"/>
                    <TextBox Grid.Column="5" Grid.Row="0" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0" IsEnabled="False" Text="111" FontSize="16"/>
                </Grid>
            </Border>
            <Border  Grid.Row="4" BorderBrush="LightGray" BorderThickness="0,1,0,0">
                <Grid Margin="0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Image Grid.RowSpan="2" Source="pack://siteoforigin:,,,/Resources/transferImg.png" Margin="15" Height="80" Width="80" HorizontalAlignment="Left"/>
                    <Button Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Style="{StaticResource BtnInfoStyle}" Width="120" Height="40"  Content="Transfer" FontSize="16" Background="#5EB26C"/>
                    <TextBlock Grid.Column="3" Text="Amount:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="10" />
                    <TextBox Grid.Column="4" Grid.Row="0" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0"/>
                    <TextBlock Grid.Column="3" Grid.Row="1" Text="Account:" VerticalAlignment="Center" FontSize="14" FontWeight="SemiBold" Margin="10" />
                    <TextBox Grid.Column="4" Grid.Row="1" Style="{StaticResource TextBoxStyle}" Height="45" Margin="5,0"/>
                </Grid>
            </Border>
